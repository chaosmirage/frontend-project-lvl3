{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "moduleResolution": "node",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types",
      ],
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": ["node_modules"]
}
